<!-- Modal -->
<div class="modal fade" id="modalAddForm" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-add-title" id="myModalLabel">Ajout d'une bouteille de <%= bottleType%></h4>
                <button type="button" class="close" data-dismiss="modal"> 
                    <span aria-hidden="true">&times;</span>
                    <button class="sr-only">Close</button>
                </button>
            </div>
            
            <!-- Modal Body -->
            <div class="modal-body">
                <p class="statusModalMsg"></p>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="text-center">
                            <video id="video" width="320" height="240" autoplay ></video><!--style="display: none;"-->
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-center">
                            <canvas id="canvas" width="320" height="240"></canvas>
                        </div>
                    </div>
                </div>
                
                <div class="text-center">
                    <button type="button" class="btn btn-dark" onclick="takePicture()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-camera-fill" viewBox="0 0 16 16">
                            <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"></path>
                            <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0z"></path>
                        </svg>
                      </button>
                </div>
                
                <form role="form" method="POST" action="add">
                    <div class="form-group">
                        <label for="inputName">Nom</label>
                        <input type="text" class="form-control" id="inputName" placeholder="Nom de la bouteille" onkeyup="bottleAlreadyExist(savedDatabase)" /> 
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="inputAge">Age</label>
                                <input type="number" class="form-control" id="inputAge" placeholder="0" value=""/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="inputAlcool">Alcool(%)</label>
                                <input type="number" class="form-control" id="inputAlcool" placeholder="40%" value="40"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputNote">Note (sur 5)</label>
                        <input type="number" class="form-control" id="inputNote" min="0" max="5" placeholder="" value=""/>
                    </div>
                    <div class="form-group">
                        <label for="inputGenre">Genre</label>
                        <input type="text" class="form-control" id="inputGenre" placeholder="" value=""/>
                    </div>
                    <div class="form-group">
                        <label for="inputNez">Nez</label>
                        <textarea class="form-control" id="inputNez" placeholder="" value=""></textarea>
                    </div>
                    <div class="form-group">
                        <label for="inputBouche">Bouche</label>
                        <textarea class="form-control" id="inputBouche" placeholder="" value=""></textarea>
                    </div>
                    <div class="form-group">
                        <label for="inputFinal">Final</label>
                        <textarea class="form-control" id="inputFinal" placeholder="" value=""></textarea>
                    </div>
                    <div class="form-group">
                        <label for="inputDistillerie">Nom du domaine</label>
                        <input type="text" class="form-control" id="inputDistillerie" placeholder="Nom du domaine" value=""/>
                    </div>
                    <div class="form-group">
                        <label for="inputName">Adresse</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="Adresse du domaine" value=""/>
                    </div>
                    <div class="form-group">
                        <label for="inputZip">Code Postal</label>
                        <input type="text" class="form-control" id="inputZip" placeholder="" value=""/>
                    </div>
                    <div class="form-group">
                        <label for="inputPays">Pays</label>
                        <input type="text" class="form-control" id="inputPays" placeholder="Pays" value=""/>
                    </div>
                    <div class="form-group">
                        <label for="inputMessage">Message</label>
                        <textarea class="form-control" id="inputMessage" placeholder="Message"></textarea>
                    </div>
                </form>
            </div>
            
            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-dark submitBtn" onclick="modalNewBottle()">Ajouter</button>
            </div>
        </div>
    </div>
</div>